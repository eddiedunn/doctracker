# doctrack.yaml - Configuration for documentation tracking
# This file defines repositories, audiences, and standards for documentation management

version: 1

# Project-level configuration
project:
  name: "My Project"
  description: "Documentation tracking for X ecosystem"
  hub_path: "./docs"  # Where aggregated docs live

# Repositories to track
# Each repository defines what content to document and how to organize it
repositories:
  - name: core-api
    path: /absolute/path/to/core-api
    content_type: python  # python | ansible | json-schema | yaml-config | mixed
    priority: high        # high | medium | low
    prefix: API           # For chunk IDs like API-AUTH-001, API-USERS-002
    source_dirs:
      - src/
      - lib/
    doc_dir: docs/

  - name: automation-playbooks
    path: /absolute/path/to/automation
    content_type: ansible
    priority: medium
    prefix: AUTO
    source_dirs:
      - playbooks/
      - roles/
    doc_dir: docs/

  - name: config-schemas
    path: /absolute/path/to/schemas
    content_type: json-schema
    priority: low
    prefix: SCHEMA
    source_dirs:
      - schemas/
    doc_dir: docs/

# Target audiences for documentation
# Each audience has specific documentation requirements and checklists
audiences:
  - name: admin
    description: "System administrators"
    checklist:
      - "Operational procedures documented"
      - "CLI/TUI usage clear"
      - "Configuration options explained"
      - "Troubleshooting guide included"
      - "Backup and recovery procedures"

  - name: developer
    description: "Developers using the system"
    checklist:
      - "API reference complete"
      - "Examples provided"
      - "Error handling documented"
      - "Architecture diagrams included"
      - "Integration patterns explained"

  - name: end-user
    description: "End users of the application"
    checklist:
      - "User guides available"
      - "Screenshots/videos included"
      - "Common workflows documented"
      - "FAQ section present"

# Documentation standards and conventions
standards:
  docstring_style: numpy  # numpy | google | sphinx
  diagram_format: mermaid
  require_examples: true
