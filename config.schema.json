{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://doctrack.example.com/session.schema.json",
  "title": "DocTrack Session Configuration",
  "description": "Schema for doctrack session configuration",
  "type": "object",
  "required": ["version", "type", "project", "repositories", "audiences", "standards"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "enum": ["single", "hub"],
      "description": "Session type: single repo or hub aggregation"
    },
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "output_path": {
          "type": "string",
          "default": "./site"
        },
        "mkdocs": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "repositories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/repository"
      }
    },
    "audiences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/audience"
      }
    },
    "standards": {
      "type": "object",
      "properties": {
        "docstring_style": {
          "type": "string",
          "enum": ["numpy", "google", "sphinx"],
          "default": "numpy"
        },
        "diagram_format": {
          "type": "string",
          "default": "mermaid"
        },
        "require_examples": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "hub": {
      "type": "object",
      "description": "Hub-specific configuration (only for type: hub)",
      "properties": {
        "navigation_style": {
          "type": "string",
          "enum": ["audience-journeys", "component-first", "hybrid"],
          "default": "audience-journeys"
        },
        "sync_direction": {
          "type": "string",
          "enum": ["pull"],
          "default": "pull"
        },
        "cross_cutting_sections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "definitions": {
    "repository": {
      "type": "object",
      "required": ["name", "path", "content_type", "prefix"],
      "properties": {
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string",
          "description": "Absolute or relative path to repository"
        },
        "content_type": {
          "type": "string",
          "enum": ["python", "ansible", "json-schema", "yaml-config", "mixed"]
        },
        "priority": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "default": "medium"
        },
        "prefix": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9]*$"
        },
        "source_dirs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "doc_dir": {
          "type": "string",
          "default": "docs/"
        }
      }
    },
    "audience": {
      "type": "object",
      "required": ["id", "name", "checklist"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "checklist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    }
  }
}
