{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://doctrack.example.com/config.schema.json",
  "title": "DocTrack Configuration",
  "description": "Schema for doctrack configuration file",
  "type": "object",
  "required": ["version", "project", "repositories", "audiences"],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Configuration schema version",
      "const": 1
    },
    "project": {
      "type": "object",
      "description": "Project-level configuration",
      "required": ["name", "hub_path"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "hub_path": {
          "type": "string",
          "description": "Path where aggregated documentation lives"
        }
      }
    },
    "repositories": {
      "type": "array",
      "description": "List of repositories to track",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "content_type", "prefix"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Repository name"
          },
          "path": {
            "type": "string",
            "description": "Absolute path to repository"
          },
          "content_type": {
            "type": "string",
            "description": "Type of content in the repository",
            "enum": ["python", "ansible", "json-schema", "yaml-config", "mixed"]
          },
          "priority": {
            "type": "string",
            "description": "Documentation priority level",
            "enum": ["high", "medium", "low"],
            "default": "medium"
          },
          "prefix": {
            "type": "string",
            "description": "Prefix for chunk IDs (e.g., REPO for REPO-AREA-001)",
            "pattern": "^[A-Z][A-Z0-9]*$"
          },
          "source_dirs": {
            "type": "array",
            "description": "Directories containing source code",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "doc_dir": {
            "type": "string",
            "description": "Directory containing documentation",
            "default": "docs/"
          }
        }
      }
    },
    "audiences": {
      "type": "array",
      "description": "Target audiences for documentation",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "checklist"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Audience identifier"
          },
          "description": {
            "type": "string",
            "description": "Audience description"
          },
          "checklist": {
            "type": "array",
            "description": "Documentation checklist items for this audience",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        }
      }
    },
    "standards": {
      "type": "object",
      "description": "Documentation standards and conventions",
      "properties": {
        "docstring_style": {
          "type": "string",
          "description": "Docstring format standard",
          "enum": ["numpy", "google", "sphinx"],
          "default": "numpy"
        },
        "diagram_format": {
          "type": "string",
          "description": "Diagram markup format",
          "default": "mermaid"
        },
        "require_examples": {
          "type": "boolean",
          "description": "Whether examples are required in documentation",
          "default": true
        }
      }
    }
  }
}
